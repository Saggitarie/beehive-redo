// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  firstName String?
  lastName  String?
  password  String
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String?
  description String?
  imageUrl    String?
  lessons     Lesson[]
}

model Lesson {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  content     String?
  course      Course  @relation(fields: [courseId], references: [id])
  courseId    Int
}
